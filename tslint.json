{
  "extends": "tslint:recommended",
  "rules": {
    "max-line-length": [
      true,
      140
    ],
    "eofline": true,
    "array-type": [
      true,
      "array"
    ],
    "space-before-function-paren": [
      true,
      {
        "anonymous": "always",
        "named": "never"
      }
    ],
    "new-parens": true,
    "quotemark": [
      true,
      "single"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "max-classes-per-file": false,
    "no-arg": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": [
      true,
      2
    ],
    "no-use-before-declare": true,
    "no-console": {
      "severity": "warning",
      "options": [
        "debug",
        "info",
        "log",
        "time",
        "timeEnd",
        "trace"
      ]
    }
  }
}
