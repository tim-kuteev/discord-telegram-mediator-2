{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "lib": ["es6", "es2017", "dom"],
      "declaration": true,
      "outDir": "dist",
      "rootDir": "src",
      "strict": true,
      "types": ["node", "jest"],
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "sourceMap": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}